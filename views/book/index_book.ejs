<div class="gallery">
  <div class="container">
    <div class="gallery-top">
      <h2>Books</h2>
      <p>Upload your books which are not in use at cheaper rates and earn money. It will be helpful to others also.</p>
    </div>
    <div class="filtr-container">
      <table class="bordered striped highlight responsive-table">
        <tr>
          <th>Book's name</th>
          <th>Submitted By</th>
          <th>Subject</th>
          <th>Expexted Cost</th>
          <th>Contact No</th>
          <th>Email</th>




        </tr>

        <% _.each(books, function(book) { %>
        <tr data-id="<%= book.id %>" data-model="book">

          <td><%= book.book_name %></td>
          <td><%= book.name %></td>
          <td><%= book.subject %></td>

          <% if(!book.cost.toString()) { %>
          <td>Free</td>
          <% } %>
          <% if(book.cost.toString()) { %>
          <td><%= book.cost %> rs.</td>
          <% } %>

          <% if(book.contact.toString().length == 10 && book.contact.toString().charAt(0) == 9 || book.contact.toString().charAt(0) == 8 || book.contact.toString().charAt(0) == 7) { %>
          <td><%= book.contact %></td>
          <% } %>
          <% if(!(book.contact.toString().length == 10 && book.contact.toString().charAt(0) == 9 || book.contact.toString().charAt(0) == 8 || book.contact.toString().charAt(0) == 7)) { %>
          <td>Not provided or Invalid</td>
          <% } %>

          <td><%= book.email %></td>

          <% if(session.User.name == "Vinit Bodhwani") {  %>
          <td><a href="/book/edit_book/<%= book.id %>" class="btn btn-sm btn-warning">Edit</a></td>
          <td><form action="/book/destroy_book/<%= book.id %>" method="POST">
              <input type="hidden" name="_method" value="delete"/>
              <input type="submit" class="btn btn-sm btn-danger" value="Delete"/>
              <input type="hidden" name="_csrf" value="<%= _csrf %>" />
            </form></td>
          <% } %>
        </tr>
        <% }) %>
      </table>

    </div>
    </br>
    </br>

    <% if(flash.err && flash) { %>
    <% Object.keys(flash.err).forEach(function(error){ %>
    <li><%- JSON.stringify(flash.err[error]) %></li>
